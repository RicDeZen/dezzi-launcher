<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/app_list_top"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_list_gradient_top" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/app_list_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAppList"
        app:layout_constraintBottom_toTopOf="@+id/app_list_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_list_top">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/app_list_bottom"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/app_list_gradient_bottom" />
</androidx.constraintlayout.widget.ConstraintLayout>